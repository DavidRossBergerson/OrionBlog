<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-8 offset-2">
            <form asp-controller="CommentPosts" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="CategoryPostId" value="@Model.Id" />
                <div class="form-group">
                    <label class="control-label">Comment</label>
                    <textarea name="CommentBody" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}

@foreach (var comment in Model.CommentPosts)
{
    @Html.Raw(comment.CommentBody)
    <p class="text-sm-center">@comment.BlogUser.Email</p>
}

